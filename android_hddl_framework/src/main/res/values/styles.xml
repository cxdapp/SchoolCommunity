<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="alertThrem" parent="@android:style/Widget.PopupWindow">
        <item name="android:windowFrame">@null</item>
        <!-- <item name="android:windowNoTitle">true</item> -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- <item name="android:windowIsFloating">true</item> -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:popupBackground">@android:color/transparent</item>
    </style>

    <style name="Anim_fade" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/fade</item>
    </style>

    <style name="Anim_show" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/TranslucentDialog</item>
    </style>

    <style name="fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/out_from_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/out_from_right</item>
    </style>

    <style name="shareDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TranslucentDialog" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/out_from_up</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_down</item>
    </style>

</resources>