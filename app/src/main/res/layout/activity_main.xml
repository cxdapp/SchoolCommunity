<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <android_hddl_framework.view.ProposalFooter
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/blue"
        android:orientation="horizontal" >

        <android_hddl_framework.view.MainTabLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:tab_ico_selected="@drawable/head_pressed"
            app:tab_ico_unselected="@drawable/head_unpress"
            app:tab_title="活动"
            app:tab_title_color_selected="@color/white"
            app:tab_title_color_unselected="@color/white"
            app:tab_title_text_size="13sp" />



        <android_hddl_framework.view.MainTabLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:tab_ico_selected="@drawable/order_pressed"
            app:tab_ico_unselected="@drawable/order_unpress"
            app:tab_title="通知"
            app:tab_title_color_selected="@color/white"
            app:tab_title_color_unselected="@color/white"
            app:tab_title_text_size="13sp" />



        <android_hddl_framework.view.MainTabLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:tab_ico_selected="@drawable/message_icon_pressed"
            app:tab_ico_unselected="@drawable/message_icon_unpressed"
            app:tab_title="消息"
            app:tab_title_color_selected="@color/white"
            app:tab_title_color_unselected="@color/white"
            app:tab_title_text_size="13sp" />

        <android_hddl_framework.view.MainTabLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:tab_ico_selected="@drawable/person_pressed"
            app:tab_ico_unselected="@drawable/person_unpress"
            app:tab_title="个人中心"
            app:tab_title_color_selected="@color/white"
            app:tab_title_color_unselected="@color/white"
            app:tab_title_text_size="13sp" />
    </android_hddl_framework.view.ProposalFooter>

    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/menu_layout" />
</RelativeLayout>
