<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white" >
     <include
		 android:id="@+id/line1"
		 layout="@layout/head_title_normal" />
	<ScrollView
	    android:id="@+id/scrollview"
		android:layout_below="@+id/line1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:scrollbars="vertical"
	    android:layout_marginBottom="10dp"
	    >
	   <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp" 
	    	android:layout_marginLeft="5dp"
	    	android:layout_marginRight="5dp"
	        android:orientation="vertical">
	        <TextView 
        		android:id="@+id/message_detail_title"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:gravity="center_vertical|left"
        		android:layout_marginLeft="5dp"
        		android:layout_marginRight="5dp"
        		android:textSize="15dp"
        		android:textColor="#ff0e0e0e"
       			android:text="文学经典的当代之用：莎士比亚个案的启示"/>

    		<ImageView 
        		android:id="@+id/message_detail_iv"
        		android:layout_marginTop="10dp"
        		android:layout_width="match_parent"
        		android:layout_height="150dp"
        		
        		android:src="@drawable/message_list_img"
        		android:scaleType="centerCrop"
        	/>
		   <RelativeLayout
			   android:layout_width="match_parent"
			   android:layout_height="wrap_content">
			   <TextView
				   android:layout_width="wrap_content"
				   android:layout_height="wrap_content"
				   android:gravity="center_vertical|left"
				   android:layout_marginLeft="5dp"
				   android:layout_marginRight="5dp"
				   android:layout_marginTop="10dp"
				   android:lineSpacingExtra="7dp"
				   android:textSize="13dp"
				   android:textColor="#ff282828"
				   android:ellipsize="end"
				   android:text="介绍："/>
			   <TextView
				   android:id="@+id/message_detail_outline"
				   android:layout_width="match_parent"
				   android:layout_height="wrap_content"
				   android:gravity="center_vertical|left"
				   android:layout_marginLeft="80dp"
				   android:layout_marginRight="5dp"
				   android:layout_marginTop="10dp"
				   android:lineSpacingExtra="7dp"
				   android:textSize="13dp"
				   android:textColor="#ff282828"
				   android:ellipsize="end"
				   android:text="演讲主题是文学经典的当代之用：莎士比亚个案的启示"/>
		   </RelativeLayout>

		   <RelativeLayout
			   android:layout_width="match_parent"
			   android:layout_height="wrap_content">
			   <TextView
				   android:layout_width="wrap_content"
				   android:layout_height="wrap_content"
				   android:gravity="center_vertical|left"
				   android:layout_marginLeft="5dp"
				   android:layout_marginRight="5dp"
				   android:layout_marginTop="10dp"
				   android:lineSpacingExtra="7dp"
				   android:textSize="13dp"
				   android:textColor="#ff282828"
				   android:ellipsize="end"
				   android:text="活动类型："/>
			   <TextView
				   android:layout_width="match_parent"
				   android:layout_height="wrap_content"
				   android:gravity="center_vertical|left"
				   android:layout_marginLeft="80dp"
				   android:layout_marginRight="5dp"
				   android:layout_marginTop="10dp"
				   android:lineSpacingExtra="7dp"
				   android:textSize="13dp"
				   android:textColor="#ff282828"
				   android:ellipsize="end"
				   android:text="讲座"/>
		   </RelativeLayout>
		   <RelativeLayout
			   android:layout_width="match_parent"
			   android:layout_height="wrap_content">
			   <TextView
				   android:layout_width="wrap_content"
				   android:layout_height="wrap_content"
				   android:gravity="center_vertical|left"
				   android:layout_marginLeft="5dp"
				   android:layout_marginRight="5dp"
				   android:layout_marginTop="10dp"
				   android:lineSpacingExtra="7dp"
				   android:textSize="13dp"
				   android:textColor="#ff282828"
				   android:ellipsize="end"
				   android:text="总人数："/>
			   <TextView
				   android:layout_width="match_parent"
				   android:layout_height="wrap_content"
				   android:gravity="center_vertical|left"
				   android:layout_marginLeft="80dp"
				   android:layout_marginRight="5dp"
				   android:layout_marginTop="10dp"
				   android:lineSpacingExtra="7dp"
				   android:textSize="13dp"
				   android:textColor="#ff282828"
				   android:ellipsize="end"
				   android:text="50"/>
		   </RelativeLayout>
		   <RelativeLayout
			   android:layout_width="match_parent"
			   android:layout_height="wrap_content">
			   <TextView
				   android:layout_width="wrap_content"
				   android:layout_height="wrap_content"
				   android:gravity="center_vertical|left"
				   android:layout_marginLeft="5dp"
				   android:layout_marginRight="5dp"
				   android:layout_marginTop="10dp"
				   android:lineSpacingExtra="7dp"
				   android:textSize="13dp"
				   android:textColor="#ff282828"
				   android:ellipsize="end"
				   android:text="已报名人数："/>
			   <TextView
				   android:layout_width="match_parent"
				   android:layout_height="wrap_content"
				   android:gravity="center_vertical|left"
				   android:layout_marginLeft="80dp"
				   android:layout_marginRight="5dp"
				   android:layout_marginTop="10dp"
				   android:lineSpacingExtra="7dp"
				   android:textSize="13dp"
				   android:textColor="#ff282828"
				   android:ellipsize="end"
				   android:text="38"/>
		   </RelativeLayout>
		   <RelativeLayout
			   android:layout_width="match_parent"
			   android:layout_height="wrap_content">
			   <TextView
				   android:layout_width="wrap_content"
				   android:layout_height="wrap_content"
				   android:gravity="center_vertical|left"
				   android:layout_marginLeft="5dp"
				   android:layout_marginRight="5dp"
				   android:layout_marginTop="10dp"
				   android:lineSpacingExtra="7dp"
				   android:textSize="13dp"
				   android:textColor="#ff282828"
				   android:ellipsize="end"
				   android:text="开始时间："/>
			   <TextView
				   android:layout_width="match_parent"
				   android:layout_height="wrap_content"
				   android:gravity="center_vertical|left"
				   android:layout_marginLeft="80dp"
				   android:layout_marginRight="5dp"
				   android:layout_marginTop="10dp"
				   android:lineSpacingExtra="7dp"
				   android:textSize="13dp"
				   android:textColor="#ff282828"
				   android:ellipsize="end"
				   android:text="2016年5月28日"/>
		   </RelativeLayout>
		   <RelativeLayout
			   android:layout_width="match_parent"
			   android:layout_height="wrap_content">
			   <TextView
				   android:layout_width="wrap_content"
				   android:layout_height="wrap_content"
				   android:gravity="center_vertical|left"
				   android:layout_marginLeft="5dp"
				   android:layout_marginRight="5dp"
				   android:layout_marginTop="10dp"
				   android:lineSpacingExtra="7dp"
				   android:textSize="13dp"
				   android:textColor="#ff282828"
				   android:ellipsize="end"
				   android:text="结束时间："/>
			   <TextView
				   android:layout_width="match_parent"
				   android:layout_height="wrap_content"
				   android:gravity="center_vertical|left"
				   android:layout_marginLeft="80dp"
				   android:layout_marginRight="5dp"
				   android:layout_marginTop="10dp"
				   android:lineSpacingExtra="7dp"
				   android:textSize="13dp"
				   android:textColor="#ff282828"
				   android:ellipsize="end"
				   android:text="2016年7月28日"/>
		   </RelativeLayout>
		   <RelativeLayout
			   android:layout_width="match_parent"
			   android:layout_height="wrap_content">
			   <TextView
				   android:layout_width="wrap_content"
				   android:layout_height="wrap_content"
				   android:gravity="center_vertical|left"
				   android:layout_marginLeft="5dp"
				   android:layout_marginRight="5dp"
				   android:layout_marginTop="10dp"
				   android:lineSpacingExtra="7dp"
				   android:textSize="13dp"
				   android:textColor="#ff282828"
				   android:ellipsize="end"
				   android:text="地点："/>
			   <TextView
				   android:layout_width="match_parent"
				   android:layout_height="wrap_content"
				   android:gravity="center_vertical|left"
				   android:layout_marginLeft="80dp"
				   android:layout_marginRight="5dp"
				   android:layout_marginTop="10dp"
				   android:lineSpacingExtra="7dp"
				   android:textSize="13dp"
				   android:textColor="#ff282828"
				   android:ellipsize="end"
				   android:text="上海大学计算机楼503"/>
		   </RelativeLayout>
		   <RelativeLayout
			   android:layout_width="match_parent"
			   android:layout_height="wrap_content">
			   <TextView
				   android:layout_width="wrap_content"
				   android:layout_height="wrap_content"
				   android:gravity="center_vertical|left"
				   android:layout_marginLeft="5dp"
				   android:layout_marginRight="5dp"
				   android:layout_marginTop="10dp"
				   android:lineSpacingExtra="7dp"
				   android:textSize="13dp"
				   android:textColor="#ff282828"
				   android:ellipsize="end"
				   android:text="创建人："/>
			   <TextView
				   android:layout_width="match_parent"
				   android:layout_height="wrap_content"
				   android:gravity="center_vertical|left"
				   android:layout_marginLeft="80dp"
				   android:layout_marginRight="5dp"
				   android:layout_marginTop="10dp"
				   android:lineSpacingExtra="7dp"
				   android:textSize="13dp"
				   android:textColor="#ff282828"
				   android:ellipsize="end"
				   android:text="丁家星"/>
		   </RelativeLayout>

    		<TextView
                	android:id="@+id/message_detail_content"
                	android:layout_width="match_parent"
                	android:layout_height="wrap_content"
                	android:layout_marginLeft="10dp"
        			android:layout_marginRight="10dp"
        			android:layout_marginTop="10dp"
        			android:layout_marginBottom="20dp"
        			android:lineSpacingExtra="7dp"
        			android:paddingBottom="20dp"
        			android:textSize="12dp"
        			android:textColor="#ff282828"/>
	    </LinearLayout>
	    
	 </ScrollView>
	<Button
		android:id="@+id/btn"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:text="我要报名"
		android:textColor="@color/white"
		android:background="@color/blue"/>
</RelativeLayout>
