<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    >
    <RelativeLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
        <TextView
            android:id="@+id/message_item_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:layout_toRightOf="@+id/iv1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:textSize="15dp"
            android:textColor="#ff0e0e0e"
            android:text="张君怡"/>
        <TextView
            android:id="@+id/message_item_content1"
            android:layout_below="@+id/message_item_name1"
            android:layout_toRightOf="@+id/iv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:textSize="12dp"
            android:textColor="#ff555555"
            android:text="你做的怎么样了"/>
        <cn.edu.shu.scommunity.view.RoundImageView
            android:id="@+id/iv1"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:src="@drawable/head_img"
            android:scaleType="centerCrop"
            />
        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/message_item_content1"
            android:layout_marginTop="8dp"

            android:layout_alignParentRight="true"
            android:background="@color/gray_light"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/message_item_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:layout_toLeftOf="@+id/iv2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:textSize="15dp"
            android:textColor="#ff0e0e0e"
            android:text="我"/>
        <TextView
            android:id="@+id/message_item_content2"
            android:layout_below="@+id/message_item_name2"
            android:layout_toLeftOf="@+id/iv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:textSize="12dp"
            android:textColor="#ff555555"
            android:text="你做的怎么样了"/>
        <cn.edu.shu.scommunity.view.RoundImageView
            android:id="@+id/iv2"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon"
            android:scaleType="centerCrop"
            />
        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/message_item_content2"
            android:layout_marginTop="8dp"

            android:layout_alignParentRight="true"
            android:background="@color/gray_light"/>
    </RelativeLayout>


</RelativeLayout>
