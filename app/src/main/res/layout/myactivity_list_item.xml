<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">
    <TextView 
        android:id="@+id/message_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="15dp"
        android:textColor="#ff0e0e0e"
        android:text="1.三八妇女节优惠大酬宾"/>
    <TextView 
        android:id="@+id/message_item_outline"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:textColor="#ff282828"
        android:text="1.三八妇女节优惠大酬宾1.三八妇女节优惠大酬宾1.三八妇女节优惠大酬宾1.三八妇女节优惠大酬宾1.三八妇女节优惠大酬宾
        1.三八妇女节优"/>
    <ImageView 
        android:id="@+id/iv"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/message_list_img"
        android:scaleType="centerCrop"
        />

</LinearLayout>
