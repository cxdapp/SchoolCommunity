<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:background="#EFEFEF"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/layout_person"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#ffffff" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="头像"
                    android:textColor="#787878"
                    android:textSize="16dp" />

                <cn.edu.shu.scommunity.view.RoundImageView
                    android:id="@+id/iv_person"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/img_go"
                    android:src="@drawable/icon"
                    zhy:borderRadius="5dp"
                    zhy:type="round" />

                <ImageView
                    android:id="@+id/img_go"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/arrow_right"
                    android:visibility="invisible" />
            </RelativeLayout>

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/layout_person"
                android:background="#787878" />

            <LinearLayout
                android:id="@+id/person_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_person"
                android:orientation="vertical" >

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/line1"
                    android:layout_marginTop="0dp"
                    android:background="#787878" />

                <RelativeLayout
                    android:id="@+id/layout_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/line2"
                    android:background="#ffffff"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="昵称"
                        android:textColor="#787878"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:layout_toLeftOf="@+id/img_go2"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/img_go2"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/arrow_right"
                        android:visibility="invisible" />
                </RelativeLayout>

                <View
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/layout_name"
                    android:background="#c9c7c7" />

                <RelativeLayout
                    android:id="@+id/layout_sex"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/line3"
                    android:background="#ffffff"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="性别"
                        android:textColor="#787878"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:layout_toLeftOf="@+id/img_go3"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/img_go3"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/arrow_right"
                        android:visibility="invisible" />
                </RelativeLayout>

                <View
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/layout_sex"
                    android:background="#c9c7c7" />

                <RelativeLayout
                    android:id="@+id/layout_age"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/line4"
                    android:background="#ffffff"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="年龄"
                        android:textColor="#787878"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:layout_toLeftOf="@+id/img_go4"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/img_go4"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/arrow_right"
                        android:visibility="invisible" />
                </RelativeLayout>

                <View
                    android:id="@+id/line5"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/layout_age"
                    android:background="#c9c7c7" />

                <RelativeLayout
                    android:id="@+id/layout_area"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/line5"
                    android:background="#ffffff"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="所在公司"
                        android:textColor="#787878"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_area"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:layout_toLeftOf="@+id/img_go5"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:maxLines="2"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/img_go5"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/arrow_right"
                        android:visibility="invisible" />
                </RelativeLayout>

                <View
                    android:id="@+id/line6"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/layout_area"
                    android:background="#c9c7c7" />

                <RelativeLayout
                    android:id="@+id/layout_phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/line6"
                    android:background="#ffffff"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="手机号码"
                        android:textColor="#787878"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/img_go6"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/arrow_right"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:layout_toLeftOf="@+id/img_go6"
                        android:textSize="16dp" />
                </RelativeLayout>

                <View
                    android:id="@+id/line7"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/layout_phone"
                    android:background="#c9c7c7" />

                <RelativeLayout
                    android:id="@+id/layout_userArea"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/line6"
                    android:background="#ffffff"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="所在区域"
                        android:textColor="#787878"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/img_go6"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/arrow_right"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_userArea"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:layout_toLeftOf="@+id/img_go6"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:maxLines="2"
                        android:textSize="16dp" />
                </RelativeLayout>

                <View
                    android:id="@+id/line7"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/layout_phone"
                    android:background="#c9c7c7" />

                <RelativeLayout
                    android:id="@+id/layout_liveAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/line6"
                    android:background="#ffffff"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="居住地址"
                        android:textColor="#787878"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/img_go6"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/arrow_right"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_liveAddress"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:layout_toLeftOf="@+id/img_go6"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:maxLines="2"
                        android:textSize="16dp" />
                </RelativeLayout>

                <View
                    android:id="@+id/line8"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/layout_liveAddress"
                    android:background="#c9c7c7" />

                <RelativeLayout
                    android:id="@+id/layout_mysign"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/line8"
                    android:background="#ffffff"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="我的签名"
                        android:textColor="#787878"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/img_go7"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/arrow_right"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_mysign"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:layout_toLeftOf="@+id/img_go7"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:maxLines="2"
                        android:textSize="16dp" />
                </RelativeLayout>

                <View
                    android:id="@+id/line7"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/layout_phone"
                    android:background="#c9c7c7" />

                <Button
                    android:id="@+id/exit_login_bt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/line7"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_drawable"
                    android:text="退出登录"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>